# Configuration MQTT Broker
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=claude-mcp-iot-client

# Configuration SSL/TLS (optionnel)
MQTT_USE_SSL=false
MQTT_CA_CERT_PATH=
MQTT_CERT_FILE_PATH=
MQTT_KEY_FILE_PATH=

# Configuration des topics par d√©faut
DEFAULT_TOPIC_PREFIX=iot/sensors
QOS_LEVEL=1

# Configuration de l'historique
MAX_HISTORY_MESSAGES=1000
HISTORY_RETENTION_HOURS=24

# Configuration du logging
LOG_LEVEL=INFO
LOG_FILE=logs/mqtt_mcp.log

# Configuration des capteurs IoT
SENSOR_DATA_FORMAT=json
INCLUDE_TIMESTAMP=true
TIMEZONE=Europe/Paris
